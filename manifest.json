{
  "manifest_version": 2,
  "name": "Detector de Privacidade",
  "version": "1.0",
  "description": "Extensão para detectar conexões de terceiros, cookies e armazenamento local.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Verificar Privacidade"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"  
  }
}
